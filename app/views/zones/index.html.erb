<h1>Listing zones</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Planta</th>
      <th>Area</th>
      <th>Zona</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @zones.each do |zone| %>
      <tr>
        <td><%= zone.area.plant.name %></td>
        <td><%= zone.area.name %></td>
        <td><%= zone.name %></td>
        <td><%= link_to 'Show', zone %></td>
        <td><%= link_to 'Edit', edit_zone_path(zone) %></td>
        <td><%= link_to 'Destroy', zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

