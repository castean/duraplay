<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="field">
      <%= f.label :plant_id, "Planta" %><br>
      <%= f.collection_select :plant_id, Plant.order("name"),:id, :name, options= {:prompt => "-- Selecciona una planta --"}, :id => "id"  %>

    </div>

    <div class="field">
      <%= f.label :brand_id, "Producto" %><br>
      <%= f.collection_select :brand_id,  Brand.order("name").where(plant_id: @product.plant_id), :id, :name, options ={:prompt => ""} %>
    </div>

    <div class="field">
      <%= f.label :quality_id, "Calidad" %><br>
      <%= f.collection_select :quality_id, Quality.order("name"),:id, :code, options= {:prompt => "-- Selecciona una calidad --"}, :id => "id"  %>
    </div>
    <div class="field">
      <%= f.label :face_id,"Caras" %><br>
      <%= f.collection_select :face_id, Face.order("name"),:id, :name, options= {:prompt => "-- Selecciona una area --"}, :id => "id"  %>
    </div>
    <div class="field">
      <%= f.label :thickness_id,"Espesor" %><br>
      <%= f.collection_select :thickness_id, Thickness.order("name"),:id, :name, options= {:prompt => "-- Selecciona una area --"}, :id => "id"  %>
      <%= f.text_field :code_thickness %>
    </div>
    <div class="field">
      <%= f.label :dimension_id,"Dimension" %><br>
      <%= f.collection_select :dimension_id, Dimension.order("name"),:id, :name, options= {:prompt => "-- Selecciona una area --"}, :id => "id"  %>
      <%= f.text_field :code_dimension %>
    </div>
    <div class="field">
      <%= f.label :covering_one %><br>
      <%= f.text_field :covering_one %>
    </div>
    <div class="field">
      <%= f.label :covering_two %><br>
      <%= f.text_field :covering_two %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
